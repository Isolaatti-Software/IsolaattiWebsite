@page
@model isolaatti_API.Pages.WebApp.Profile

@{
    Layout = "Shared/_LayoutWebApp";
    ViewData["Title"] = ViewData["profile_name"];
}


<div class="col-lg-3 col-md-2"></div>
<div class="col-lg-6 col-md-8">
    <div class="d-flex justify-content-center">
        <h1 class="display-1">
            <i class="fas fa-user"></i>
        </h1>
    </div>
    <nav class="d-flex justify-content-end">
        <button class="btn btn-primary btn-sm" id="edit-profile-button">Follow</button>
    </nav>
    <h2 class="text-center">@ViewData["profile_name"]</h2>
    <h5 class="text-center">@ViewData["profile_email"]</h5>
</div>
<div class="col-lg-3 col-md-2"></div>

@section Scripts
{
    <script src="~/js/profile.js"></script>
}
