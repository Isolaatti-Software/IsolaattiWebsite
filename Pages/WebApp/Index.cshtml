@page
@model isolaatti_API.Pages.WebApp.Index

@{
    Layout = "Shared/_LayoutWebApp";
    ViewData["Title"] = "Home";
}
<h1>Hi, @ViewData["name"].</h1>
<h2>Add an audio file to the queue to process it!</h2>
<p><a href="#">Manage queue</a></p>
<p class="mt-4">Only MP3 files are allowed for now</p>
<div class="custom-file">
    <input type="file" class="custom-file-input" id="audioFileInput" accept="audio/mpeg">
    <label class="custom-file-label" for="customFile">Choose file</label>
</div>
<p class="mt-4">Some data has been automatically filled in, but you can change it anyway</p>
<div class="form-group">
    <label for="field_songs_name">Song</label>
    <input type="text" class="form-control" id="field_songs_name" placeholder="Name goes here" disabled>
</div>
<div class="form-group">
    <label for="field_songs_artist">Artist</label>
    <input type="text" class="form-control" id="field_songs_artist" placeholder="Artist goes here" disabled>
</div>
<div class="d-flex">
    <div class="progress w-100 mt-2 mb-2" id="progress-bar-container" style="visibility: hidden">
        <div id="file_upload_progress_bar" class="progress-bar" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    
</div>
<div class="d-flex justify-content-center">
    
    <button class="btn btn-dark" id="btnUploadAudioFile">
        GO!
    </button>
</div>