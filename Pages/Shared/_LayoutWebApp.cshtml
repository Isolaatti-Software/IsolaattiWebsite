<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <!-- Chrome, Firefox OS and Opera -->
    <meta name="theme-color" content="#30098E">
    <!-- Windows Phone -->
    <meta name="msapplication-navbutton-color" content="#30098E">
    <!-- iOS Safari -->
    <meta name="apple-mobile-web-app-status-bar-style" content="#30098E">
    <title>@ViewData["Title"] | Isolaatti</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
          integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/webapp_main.css"/>
    <link rel="shortcut icon" href="~/favicon.ico">
    <link rel="icon" type="image/png" sizes="196x196" href="~/favicon-192.png">
    <link rel="icon" type="image/png" sizes="160x160" href="~/favicon-160.png">
    <link rel="icon" type="image/png" sizes="96x96" href="~/favicon-96.png">
    <link rel="icon" type="image/png" sizes="64x64" href="~/favicon-64.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon-32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon-16.png">
    <link rel="stylesheet" href="~/css/custom_bootstrap.css"/>
    <link rel="stylesheet" href="~/css/notifications-container-style.css">
    @RenderSection("CSS", required: false)
    <script src="https://kit.fontawesome.com/fde197fc03.js" crossorigin="anonymous"></script>
    <script>
    const userData = {id:@ViewData["userId"],name:"@ViewData["name"]",email:"@ViewData["email"]"};
    const sessionToken = '@Html.Raw(Context.Request.Cookies["isolaatti_user_session_token"])';
    </script>
</head>
<body>

<nav class="d-flex custom-nav sticky-top pr-2 pl-2" id="isolaatti-top-bar">
    <div class="container">
        <div class="d-flex w-100 align-items-center">
            <a href="/" class="nav-link custom-nav-link mr-auto" id="isolaatti_brand"></a>
            <div class="d-flex flex-grow-1" id="search-bar-fixed-top">
                <button type="button"
                        class="btn btn-dark btn-sm mr-1"
                        id="search-bar-mobile-button-close">
                    <i class="far fa-window-close"></i>
                </button>
                <input type="text"
                       class="form-control search-bar-on-top flex-grow-1"
                       form="form-search"
                       name="q"
                       placeholder="Search for people, projects, and threads"/>
                <button class="btn btn-primary btn-sm ml-1"
                        type="submit"
                        form="form-search">
                    <i class="fas fa-search"></i>
                </button>
            </div>
            <a href="#"
               class="nav-link custom-nav-link"
               id="mobile-search-button-appear">
                <i class="fas fa-search"></i>
            </a>
            <div class="d-flex ml-auto mr-5 flex-column">
                <a class="nav-link custom-nav-link"
                   href="#modal-new-post"
                   data-toggle="modal"
                   title="Post Editor"
                   id="post-editor-link">
                    <i class="fas fa-feather"></i>
                    <small>New</small>
                </a>

            </div>
            <a class="nav-link custom-nav-link nav-link mr-1"
               href="#"
               role="button"
               id="dropdownNotificationsMenuLink"
               aria-haspopup="true" aria-expanded="false"
               onclick="vueInstanceForNotifications.toggleNotificationsSlider()">
                <i class="fas fa-bell"></i>
                <span class="badge badge-light" id="unread-count"></span>
            </a>

            <div class="dropdown ">
                <a class="nav-link custom-nav-link nav-link mr-1 dropdown-toggle"
                   href="#"
                   role="button"
                   id="dropdownMenuLink"
                   data-toggle="dropdown"
                   aria-haspopup="true"
                   aria-expanded="false">
                    @if (ViewData["profilePicUrl"] == null)
                    {
                        <i class="fas fa-user-circle"></i>
                    }
                    else
                    {
                        <img width="40" height="40" src="@ViewData["profilePicUrl"]" class="user-avatar"/>
                    }
                </a>
                <div class="dropdown-menu dropdown-menu-right"
                     aria-labelledby="dropdownMenuLink">
                    <div class="dropdown-header">
                        @ViewData["name"]
                    </div>
                    <div class="dropdown-divider"></div>
                    <a asp-page="/MyProfile"
                       class="dropdown-item">
                        @if (ViewData["profilePicUrl"] == null)
                        {
                            <i class="fas fa-user-circle"></i>
                        }
                        else
                        {
                            <img width="40" height="40" src="@ViewData["profilePicUrl"]" class="user-avatar"/>
                        }
                        My Profile
                    </a>
                    <a class="dropdown-item"
                       asp-page="/Settings">
                        <i class="fas fa-cog"></i>Settings
                    </a>
                    <a class="dropdown-item"
                       asp-page="/About"
                       target="_blank">
                        <i class="fas fa-info"></i>About
                    </a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item"
                       href="/WebLogOut">
                        <i class="fas fa-sign-out-alt"></i>Sign out
                    </a>
                </div>
            </div>
        </div>
    </div>
</nav>
<form id="form-search" asp-page="/Search" method="get"></form>
<main style="height: calc(100vh - 56px); overflow: auto" id="main-container">


    <div class="fluid-container p-0">
        <div class="row m-0">
            @RenderBody()
        </div>

    </div>
    <div class="modal fade" id="modal-new-post">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">New post (not implemented)</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <textarea class="form-control" placeholder="Write the content of your post here. Markdown is compatible." rows="8"></textarea>
                </div>
                <div class="modal-footer">
                    <a asp-page="/PostEditor" class="btn btn-secondary mr-auto">Pro editor</a>
                    <button class="btn btn-primary">Post</button>
                </div>
            </div>
        </div>
    </div>
</main>
<div id="vue-container-for-notifications" class="sticky-top" ref="notificationsSlider">
    <div id="notifications-container">
        <div class="d-flex m-2 align-items-center">
            <button class="btn btn-primary" v-on:click="toggleNotificationsSlider">
                &times
            </button>
            <h3 class="ml-2 m-0">Notifications</h3>

        </div>
        <notification v-for="notification in notifications"
                      :notification-obj="notification">

        </notification>
    </div>
</div>


<!-- JS, Popper.js, and jQuery -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/3.1.7/signalr.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
@RenderSection("Scripts", required: false)
<script src="~/js/VueComponents/notificationComponent.js"></script>
<script src="~/js/realtime-notifications.js"></script>
<script>
let searchBar = document.querySelector("#search-bar-fixed-top");
let buttonAppearSearchBar = document.querySelector("#mobile-search-button-appear");
let buttonCloseSearchBar = document.querySelector("#search-bar-mobile-button-close");
buttonAppearSearchBar.addEventListener("click",function (){
    searchBar.style.top = "0";
});
buttonCloseSearchBar.addEventListener("click", function (){
    searchBar.style.top = "-60px";
});
</script>
<script async type="application/javascript" src="https://a.exdynsrv.com/ad-provider.js"></script>
<script>(AdProvider = window.AdProvider || []).push({"serve": {}});</script>
</body>
</html>