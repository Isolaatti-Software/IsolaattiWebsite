<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Chrome, Firefox OS and Opera -->
    <meta name="theme-color" content="#30098E">
    <!-- Windows Phone -->
    <meta name="msapplication-navbutton-color" content="#30098E">
    <!-- iOS Safari -->
    <meta name="apple-mobile-web-app-status-bar-style" content="#30098E">
    <title>@ViewData["Title"] - Isolaatti</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" 
          integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/webapp_main.css"/>
    <link rel="shortcut icon" href="~/icon.png">
    <script src="https://kit.fontawesome.com/fde197fc03.js" crossorigin="anonymous"></script>
    <script>
    const userData = {
          id:@ViewData["userId"],
          name:"@ViewData["name"]",
          email:"@ViewData["email"]",
          password:"@ViewData["password"]"
      };
    </script>
</head>
<body>
@if (ViewData["isAndroid"] == null || !(bool) ViewData["isAndroid"])
{
    <nav class="nav custom-nav sticky-top">
        <a href="/" class="nav-link custom-nav-link" id="isolaatti_brand">ISOLAATTI</a>
        <a class="nav-link custom-nav-link" asp-page="Index" id="index-link"><i class="fas fa-home"></i> <span class="navbar-item-text">Home</span></a>
        <a class="nav-link custom-nav-link" asp-page="Songs" id="songs-link"><i class="fas fa-music"></i> <span class="navbar-item-text">Collection</span></a>
        <a class="nav-link custom-nav-link" asp-page="OnQueue" id="onqueue-link"><i class="fas fa-th-list"></i> <span class="navbar-item-text">On queue</span></a>
        <a class="nav-link custom-nav-link nav-link ml-auto mr-1" asp-page="Notifications"><i class="fas fa-bell"></i></a>
        <div class="dropdown ">
            <a class="dropdown-toggle nav-link custom-nav-link nav-link ml-auto mr-1" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-user-circle"></i>
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                <div class="dropdown-header">@ViewData["name"]</div>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" asp-page="Profile"><i class="fas fa-user"></i>Profile</a>
                <a class="dropdown-item" asp-page="Settings"><i class="fas fa-cog"></i>Settings</a>
                <a class="dropdown-item" href="#"><i class="fas fa-info"></i>About</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="/WebLogOut"><i class="fas fa-sign-out-alt"></i>Sign out</a>
            </div>
        </div>
    </nav>
}

<div class="container-fluid p-0">
    <div class="row m-0">@RenderBody()</div></div>
@if (ViewData["isAndroid"] == null || !(bool) ViewData["isAndroid"])
{
    <a href="https://www.facebook.com/isolaatti" id="contact-me-bottom-section" title="Follow and contact Isolaatti on Facebook" target="_blank">
        <i class="fab fa-facebook"></i>
    </a>
}

<!-- JS, Popper.js, and jQuery -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
@RenderSection("Scripts", required: false)
</body>
</html>