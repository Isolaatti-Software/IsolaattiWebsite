@page
@model isolaatti_API.Pages.ForgotPassword

@{
    Layout = "Shared/_LayoutWebAppOutside";
    ViewData["Title"] = "Forgot password";
}

<div class="d-flex flex-column align-items-center justify-content-center sign-in-up-form-container">
    <h1>Isolaatti</h1>
    <div class="d-flex justify-content-center align-items-center">
       @if (Model.Post)
       {
           <div class="sign-in-up-form">
                             @if (Model.EmailFound)
                             {
                                 <h2>We've sent a link with instructions to recover your password</h2>
                                 <section class="d-flex">
                                     <a asp-page="Index" class="ml-2">Sign in</a>
                                 </section>
                             }
                             else
                             {
                                 
                                 <h2>The email address was not found</h2>
                                 <section class="d-flex">
                                     <a asp-page="ForgotPassword" class="mr-2">Try again</a>
                                     <a asp-page="Index" class="ml-2">Sign in</a>
                                 </section>
                             } 
           </div>


       }
       else
       {
           
           <form method="post" enctype="multipart/form-data" class="sign-in-up-form">
               <h2 class="mb-4">Recover your password</h2>
               <div class="form-group">
                   <label for="email">Email</label>
                   <input type="email" class="form-control mb-2" name="email" id="email" required/>
                   <button type="submit" class="btn btn-primary w-100">Continue</button>
               </div>
           </form>
       } 
    </div>
</div>




