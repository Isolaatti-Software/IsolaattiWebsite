@page
@model isolaatti_API.Pages.admin.LogIn

@{
    Layout = "Shared/_LayoutLoginAdmin";
    ViewData["Title"] = "LogIn";
}
<div class="d-flex justify-content-center mt-1">
    <div class="alert alert-info">
        Solo para administración de Isolaatti. Se deseas utilizar la aplicación, ve a: <a asp-page="/Index">isolaatti.azurewebsites.net</a>
    </div>
</div>
<div class="d-flex justify-content-center">
    <div class="card mt-5">
        <div class="card-header">
            Inicio de sesión
        </div>
        <form method="post">
            <div class="form-group p-3 m-2">
                @if (Model.ShowAlert)
                {
                    <div class="alert alert-info">@ViewData["AlertContent"]</div>
                }
                <input type="text" name="email" placeholder="Enter email" class="form-control mb-2" autocomplete="false"/>
                <input type="password" name="password" placeholder="Enter password" class="form-control" autocomplete="false"/>
            </div>
            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary m-3">Enter</button>
            </div>
        </form>

    </div>
</div>