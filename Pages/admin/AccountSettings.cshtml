@page
@model isolaatti_API.Pages.admin.AccountSettings

@{
    Layout = "Shared/_LayoutAdminPortal";
    ViewData["Title"] = "Account settings";
}
<h1 class="mt-4">Account settings</h1>
@if (Model.WantToShowAlert)
{
    <div class="alert alert-info">
        @ViewData["alertContent"]
    </div>
}
<div class="card mt-2">
    <div class="card-header">Email</div>
    <div class="card-body">
        <form asp-page="AccountSettings" method="post">
            <div class="form-group">
                <label for="emailTextbox">Email address</label>
                <input type="email" id="emailTextbox" value="" name="newEmail" class="form-control"/>
            </div>
            <input type="hidden" name="action" value="changeEmailAddress"/>
            <button type="submit" class="btn btn-primary">Accept</button>
        </form>
    </div>
</div>
<div class="card mt-2">
    <div class="card-header">Change password</div>
    <div class="card-body">
        <form asp-page="AccountSettings" method="post">
            <div class="form-group">
                <label for="currentPassword">Your current password</label>
                <input type="password" id="currentPassword" name="currentPassword" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="newPassword">A new password</label>
                <input type="password" id="newPassword" name="newPassword" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="newPasswordConfirm">Confirm new password</label>
                <input type="password" id="newPasswordConfirm" name="newPasswordConfirm" class="form-control"/>
            </div>
            
            
            <input type="hidden" name="action" value="changePassword"/>
            <button type="submit" class="btn btn-primary">Change password!</button>
        </form>
    </div>
</div>

