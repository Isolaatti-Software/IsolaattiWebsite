@page "/ajustes/cambiar_contra"
@model isolaatti_API.Pages.ChangePassword

@{
    Layout = "Shared/_LayoutWebApp";
    ViewData["Title"] = "Cambia tu contraseña";
}
<div class="row m-0">
    <div class="col-lg-3 col-md-2"></div>
    <div class="col-lg-6 col-md-8">
        <h5 class="mt-3 text-center"><i class="fas fa-cog"></i> Ajustes</h5>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-page="/Settings">Ajustes</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Cambiar contraseña</li>
            </ol>
        </nav>
        <div class="d-flex justify-content-center">
            <div class="card mt-2 max-500px">
                <h5 class="card-header">Cambia tu contraseña</h5>
                <div class="card-body">
                    <p class="card-text">Después de este proceso, tendrás que inicar sesión de nuevo</p>
                    <form method="post" id="change-password-form">
                        <input type="hidden" name="userId" value="@ViewData["userId"]">
                        <div class="form-group">
                            <label for="current_password_field">Contraseña actual</label>
                            <input type="password" asp-for="CurrentPassword" class="form-control"
                                   id="current_password_field" required autocomplete="false">
                            <div class="invalid-feedback">
                                La contraseña actual proporcionada es incorrecta. Inténtalo de nuevo
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Nueva contraseña</label>
                            <input type="password" asp-for="NewPassword" class="form-control"
                                   id="new_password_field" required autocomplete="false">
                        </div>
                        <div class="form-group">
                            <label for="new_password_conf_field">Confirma nueva contraseña</label>
                            <input type="password" class="form-control"
                                   id="new_password_conf_field" required autocomplete="false">
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">Continuar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <p class="mt-3">Otros vínculos: <a asp-page="/Sessions">Consulta donde has iniciado sesión.</a></p>
    </div>
    <div class="col-lg-3 col-md-2"></div>
</div>