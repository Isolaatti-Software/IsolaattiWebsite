@page "/squads/create"
@model Isolaatti.Pages.CreateSquad

@{
    Layout = "Shared/_LayoutWebApp";
    ViewData["Title"] = "Crear Squad";
}
<div class="col-xl-2 col-lg-3 col-md-4 p-0" id="vue-container-for-left-bar">

    <aside id="left-bar" class="p-2">
        <h5 class="m-3">
            <i class="fas fa-users"></i><span class="ml-1">Squads</span>
        </h5>

        <div class="d-flex flex-column mt-2">
            <a asp-page="/CreateSquad" class="btn btn-primary">Nuevo squad</a>
            <div class="d-flex">
                <a asp-page="/Squads" class="mt-1 ml-2">Mis squads</a>
                <a href="#" class="mt-1 ml-2">Solicitudes</a>
            </div>
            <hr/>
            <a href="#" class="btn btn-secondary">Explora</a>
            <a href="#" class="mt-1 ml-2">Invitaciones</a>
        </div>

    </aside>
</div>
<div class="col-xl-10 col-lg-9 col-md-8">
    <div class="d-flex flex-column">
        <h5 class="mt-3 text-center"><i class="fas fa-users"></i> Crear Squad</h5>
        <form>
            <div class="card mt-4 ml-5 mr-5">
                <div class="card-header">
                    Datos de identificación
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label>Nombre</label>
                        <input type="text" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label>Descripción</label>
                        <textarea class="form-control"></textarea>
                    </div>
                </div>
            </div>
            <div class="card mt-3 ml-5 mr-5">
                <div class="card-header">
                    Visual
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label>Color</label>
                        <input type="color" class="form-control"/>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>