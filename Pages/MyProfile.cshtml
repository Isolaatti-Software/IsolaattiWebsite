@page
@using isolaatti_API.Models
@using isolaatti_API.Utils
@model isolaatti_API.Pages.MyProfile

@{
    Layout = "Shared/_LayoutWebApp";
    ViewData["Title"] = ViewData["name"];
}

<div class="col-xl-2 col-lg-3 col-md-4 p-0">
    <aside id="left-bar" class="p-2">
        <div class="d-flex justify-content-center align-items-center flex-column">
            @if (Model.ProfilePhotoUrl == null)
            {
                <div class="profile-pic mt-3">
                    <i class="fas fa-user"></i>
                </div>
            }
            else
            {
                <img src="@Model.ProfilePhotoUrl" width="100" height="100" class="profile-pic mt-3"/>
            }
            <button class="btn btn-sm btn-secondary" id="change-profile-photo-btn" data-toggle="modal" 
                    data-target="#modal-change-photo"><i class="fas fa-camera"></i></button>
        </div>
        <div class="translucent-white-card">
            <p class="text-center m-0 overflow-auto text-break username-profile">@ViewData["name"]</p>
            <p class="text-break text-center">@ViewData["description"]</p>
            <nav class="d-flex justify-content-center">
                <button class="btn btn-primary btn-sm" id="edit-profile-button"
                        data-target="#modal-edit-profile" data-toggle="modal">
                    Edit profile
                </button>
            </nav>
            <div class="d-flex flex-wrap mt-2">
                <div class="btn-group btn-group-sm">
                    <a class="btn btn-link"
                       data-toggle="modal" href="#modal-followers">
                        Followers: <b>@ViewData["numberOfFollowers"]</b>
                    </a>
                    <a class="btn btn-link"
                       data-toggle="modal" href="#modal-following">
                        Following: <b>@ViewData["numberOfFollowing"]</b>
                    </a>
                </div>
            </div>
            <div class="card mb-2">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Likes 
                        <span class="badge badge-primary badge-pill">@ViewData["numberOfLikes"]</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Posts
                        <div class="badge badge-primary badge-pill">
                            @ViewData["numberOfPosts"]
                        </div>
                    </li>
                    <button class="list-group-item d-flex justify-content-between align-items-center" 
                            data-target="#modal-shared-links" data-toggle="modal">
                        Shared links
                        <div class="badge badge-primary badge-pill">
                            @Model.Shares.Count
                        </div>
                    </button>
                </ul>
            </div>
            <div style="height: 10px"></div>
        </div>

    </aside>
</div>
<div class="col-xl-10 col-lg-9 col-md-8">

    @if ((bool) ViewData["profile_updated"])
    {
        <div class="alert alert-info">Profile updated successfully</div>
    }
    @if ((bool) ViewData["nameNotAvailable"])
    {
        <div class="alert alert-warning"><strong>@ViewData["statusData"]</strong> is not available</div>
    }
    @if ((bool) ViewData["emailNotAvailable"])
    {
        <div class="alert alert-warning"><strong>@ViewData["statusData"]</strong> is not available</div>
    }
    
    <section id="your-posts-deposit" class="d-flex flex-column mt-3 align-items-center">
        
        <div id="vue-container" class="w-100 d-flex align-items-center flex-column">
            <h5 class="m-3"><i class="far fa-newspaper"></i> Your posts</h5>
            <div class="d-flex justify-content-end w-100">
                <button type="button" class="btn btn-primary mb-2 mr-auto" 
                        data-toggle="modal" data-target="#modal-new-post" title="New post">
                    <i class="fas fa-edit"></i>
                </button>
                <div class="btn-group mb-2">
                    <button type="button" class="btn btn-secondary" title="Filter"
                            data-target="#modal-filter-posts" data-toggle="modal">
                        <i class="fas fa-filter"></i>
                    </button>
                    <button type="button" class="btn btn-secondary" title="Sort"
                            data-target="#modal-sort-posts" data-toggle="modal">
                        <i class="fas fa-sort"></i>
                    </button>
                </div>
            </div>
            <div v-if="loading" class="d-flex justify-content-center mt-2">
                <div class="spinner-border" role="status">
                    <span class="sr-only">Loading more content...</span>
                </div>
            </div>
            <post-template v-for="post in filterAndSortedPosts" :post="post"
                           v-on:like="likePost(post)"
                           v-on:un-like="unLikePost(post)"
                           v-model="postLinkToShare"
                           v-on:delete="deletePost(post.id)"
                           v-on:play-audio="playAudio(post.audioAttachedUrl)"
                           :audio-url="audioUrl"
                           :paused="paused"
                           :is-modal="false"
                           v-on:view-thread="viewComments(post)"
                           v-bind:key="post.id">
            </post-template>

            <div class="modal fade" id="modal-share-post">
                <div class="modal-dialog-centered modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">
                                Share post
                            </h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>
                                Use this link to share post
                            </p>
                            <button class="btn btn-primary" v-on:click="copyToClipboard(postLinkToShare)">Copy to clipboard</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="thread-viewer">
                <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-xl">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <comment v-for="comment in commentsViewer.comments"
                                     :comment="comment"
                                     :audio-url="audioUrl"
                                     :paused="paused"
                                     v-on:play-audio="playAudio(comment.audioUrl)">
                            </comment>
                        </div>
                        <div class="modal-footer">
                            <span><a :href="openThreadLink" target="_blank">Open thread</a></span>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Modal filter posts -->
            <div class="modal fade" id="modal-filter-posts">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Filter</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <h6>Content</h6>
                            <select class="custom-select" v-model="filterData.content">
                                <option value="all">All</option>
                                <option value="withAudio">Only with audio</option>
                                <option value="withoutAudio">Only without audio</option>
                            </select>
                            
                            <h6 class="mt-3">Privacy</h6>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" v-model="filterData.privacy.private">
                                <label class="form-check-label">Private</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" v-model="filterData.privacy.isolaatti">
                                <label class="form-check-label">Isolaatti</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" v-model="filterData.privacy.public">
                                <label class="form-check-label">Public</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Modal sort posts -->
            <div class="modal fade" id="modal-sort-posts">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Sort</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <select class="custom-select" v-model="sortingData.ascending">
                                <option value="0">Descending</option>
                                <option value="1">Ascending</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </section>
</div>

@* Add here Bootstrap modals *@
<!-- Modal edit profile -->
<div class="modal fade" id="modal-edit-profile">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit profile</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    &times;
                </button>
            </div>
            <div class="modal-body">
                <form id="edit-profile-form" method="post" asp-controller="EditProfile" asp-action="FromWeb">
                    <div class="form-group">
                        <label for="edit-name-field">Name</label>
                        <input type="text" id="edit-name-field" class="form-control" name="newUsername">
                    </div>
                    <div class="form-group">
                        <label for="edit-email-field">Email</label>
                        <input type="email" id="edit-email-field" class="form-control" name="newEmail">
                    </div>
                    <div class="from-group">
                        <label for="">Description</label>
                        <small>120 characters at most</small>
                        <textarea id="description-text-field" class="form-control" name="newDescription" maxlength="120">@ViewData["description"]</textarea>
                    </div>
                    <input type="hidden" name="id" value="@ViewData["id"]">
                    <input type="hidden" name="password" value="@ViewData["password"]">
                </form>
            </div>
            <div class="modal-footer">
                <a class="btn btn-secondary mr-auto" id="password_btn" data-toggle="modal" href="#modal-password" aria-controls="my password"
                   aria-selected="true">
                    Change password
                </a>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" id="save-edited-profile" form="edit-profile-form">Save</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal shared links -->
<div class="modal fade" id="modal-shared-links">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Shared links</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    &times;
                </button>
            </div>
            <div class="modal-body">
                @* Write here shared links table *@
                <ul class="list-group">
                    @if (!Model.Shares.Any())
                    {
                        <div class="d-flex justify-content-center align-items-center" style="height: 350px">
                            <h6>You have not shared any project</h6>
                        </div>
                    }
                    @foreach (var share in Model.Shares)
                    {
                        <li class="list-group-item list-group-item-dark">
                            <div class="d-flex flex-column">
                                <h5 class="mb-1">@share.Name - @share.Artist</h5>
                                <p class="share-link-text">Link: <a href="@share.Url">@share.Url</a></p>
                                <div class="d-flex justify-content-between">
                                    <div class="d-flex">
                                        <div class="btn-group">
                                            <button type="button"
                                                    onclick="copyLinkToClipboard(this,'@share.Url')"
                                                    class="btn btn-light btn-sm" title="Copy to clipboard">
                                                <i class="fas fa-link"></i>
                                            </button>
                                            <button type="button" class="btn btn-light btn-sm" title="Share on Facebook">
                                                <i class="fab fa-facebook"></i>
                                            </button>
                                            <button type="button" class="btn btn-light btn-sm" title="Share on Twitter">
                                                <i class="fab fa-twitter-square"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="d-flex">
                                        <button type="button" class="btn btn-sm btn-danger" title="Delete link" onclick="deleteShare('@share.Uid')">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Modal change password -->
<div class="modal fade" id="modal-password">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Change password</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    &times;
                </button>
            </div>
            <div class="modal-body">
                <h5>Change your password</h5>
                <p>After this process, you will be asked to log in again.</p>
                <form method="post" id="change-password-form">
                    <input type="hidden" name="userId" value="@ViewData["userId"]">
                    <div class="form-group">
                        <label for="current_password_field">Current password</label>
                        <input type="password" name="current_password" class="form-control"
                               id="current_password_field" required autocomplete="false">
                        <div class="invalid-feedback">
                            Current password is not correct, Try again.
                        </div>
                    </div>
                    <div class="form-group">
                        <label>New password</label>
                        <input type="password" name="new_password" class="form-control"
                               id="new_password_field" required autocomplete="false">
                    </div>
                    <div class="form-group">
                        <label for="new_password_conf_field">Confirm new password</label>
                        <input type="password" name="new_password_conf" class="form-control"
                               id="new_password_conf_field" required autocomplete="false">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary ml-auto" data-dismiss="modal">
                    Close
                </button>
                <button type="submit" class="btn btn-primary" form="change-password-form">
                    Change
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal followers -->
<div class="modal fade" id="modal-followers">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Followers</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    &times;
                </button>
            </div>
            <div class="modal-body">
                <div class="profiles-list-container">
                    @if (!Model.Followers.Any())
                    {
                        <p class="m-3">
                            Nobody is following you. You can start follwing someone so that you become known.
                        </p>
                    }
                    @foreach (User user in Model.Followers)
                    {
                        <a class="user-profile-card"
                           asp-page="Profile" asp-route-id="@user.Id">
                            @if (user.ProfileImageData == null)
                            {
                                <div class="profile-pic mt-3">
                                    <i class="fas fa-user"></i>
                                </div>
                            }
                            else
                            {
                                <img src='@UrlGenerators.GenerateProfilePictureUrl(user.Id, (string)ViewData["sessionToken"])' 
                                     width="100" height="100" class="profile-pic mt-3"/>
                            }
                            <h6>@user.Name</h6>
                        </a>                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal following -->
<div class="modal fade" id="modal-following">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Following</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    &times;
                </button>
            </div>
            <div class="modal-body">
                <div class="profiles-list-container">
                    @if (!Model.Following.Any())
                    {
                        <p class="m-3">
                            You are not following anyone.
                        </p>
                    }
                    @foreach (User user in Model.Following)
                    {
                        <a class="user-profile-card" asp-page="Profile" asp-route-id="@user.Id">
                            @if (user.ProfileImageData == null)
                            {
                                <div class="profile-pic mt-3">
                                    <i class="fas fa-user"></i>
                                </div>
                            }
                            else
                            {
                                <img src='@UrlGenerators.GenerateProfilePictureUrl(user.Id, (string)ViewData["sessionToken"])' 
                                     width="100" height="100" class="profile-pic mt-3"/>
                            }
                            <h6>@user.Name</h6>
                        </a>                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal change photo -->
<div class="modal fade" id="modal-change-photo">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-camera"></i> Change your profile photo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    &times;
                </button>
            </div>
            <div class="modal-body">
                <div class="d-flex justify-content-center mb-2">
                    <canvas width="120" height="120" id="previewProfilePicture"></canvas>
                </div>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="profilePictureLoadFormElement" accept="image/*">
                    <label class="custom-file-label" for="profilePictureLoadFormElement" id="fileNameProfilePic">Choose file</label>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-sm btn-secondary mr-auto">
                    Remove
                </button>
                <button class="btn btn-sm btn-secondary">
                    Cancel
                </button>
                <button class="btn btn-sm btn-primary" id="uploadProfilePhoto" disabled>
                    Accept
                </button>
            </div>
        </div>
    </div>
</div>

@if (Model.PasswordIsWrong)
{
    <script>
    // show password pane because password was not correct
    document.addEventListener("DOMContentLoaded", function () {
        $("#password_tab").tab('show');
        document.querySelector("#current_password_field").classList.add("is-invalid");
    });
    </script>
}
@if (ViewData["profile_open"].Equals("password"))
{
    <script>
    document.addEventListener("DOMContentLoaded", function () {
        $("#modal-password").modal('show');
    });
    </script>
}
else if (ViewData["profile_open"].Equals("links"))
{
    <script>
    document.addEventListener("DOMContentLoaded", function () {
        $("#modal-shared-links").modal('show');
    });
    </script>
}

@section Scripts
{
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
    <script src="~/js/VueComponents/postComponent.js"></script>
    <script src="~/js/VueComponents/commentComponent.js"></script>
    <script src="~/js/my_profile.js"></script>
}