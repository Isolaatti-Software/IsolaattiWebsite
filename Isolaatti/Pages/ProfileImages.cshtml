@page "/perfil/{id}/imagenes_perfil"
@model Isolaatti.Pages.ProfileImages

@{
    Layout = "Shared/_LayoutWebApp";
    ViewData["Title"] = $"Imagenes de perfil de {Model.Name}";
}

@section CSS
{
    <script>const pageTitle = "Imagenes del perfil"</script>
}

<div class="col-lg-3 col-md-2"></div>
<div class="col-lg-6 col-md-8">
    <h5 class="mt-3 text-center"><i class="fas fa-camera" aria-hidden="true"></i> Imágenes del perfil</h5>
    <div class="grid-3-columns mt-2">
        @foreach (var profileImage in Model.ProfileImagesList)
        {
            <div class="d-flex justify-content-center w-100 hover-image-container" onclick="window.location='@Url.PageLink("ImageViewer", null, new { imageId = profileImage.Id })'">
                <img src="@Url.Action("GetProfileImage", "Fetch", new { id = profileImage.Id })" class="w-100"/>
            </div>
        }
    </div>
</div>
<div class="col-lg-3 col-md-2"></div>