@page "/ajustes/feed/contenido"
@model Isolaatti.Pages.SettingsPages.FeedSettingsContent

@{
    Layout = "Shared/_LayoutWebApp";
    ViewData["Title"] = "Ajustes del contenido del feed";
}
<div class="container">
    <div class="row m-0">
        <div class="col-lg-3 col-md-2"></div>
        <div class="col-lg-6 col-md-8">
            <h5 class="mt-3 text-center"><i class="fas fa-cog"></i> Ajustes</h5>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-page="/Settings">Ajustes</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Contenido del feed</li>
                </ol>
            </nav>
            
            @if (Model.PreferencesUpdated)
            {
                <div class="alert alert-info alert-dismissible">
                    Preferencias actualizadas exitosamente
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">&times;</button>
                </div>
            }
            <p>Gestiona los parametros que definen el contenido de tu feed.</p>
            <form method="post" asp-page-handler="ShowOwnPostsSet">
                <div class="custom-control custom-switch">
                    <input class="custom-control-input" id="switch-feed-settings-show-own-content" asp-for="ShowOwnPostsOnFeed"/>
                    <label class="custom-control-label" for="switch-feed-settings-show-own-content">
                        Mostrar tus discusiones no privadas en tu feed
                    </label>
                </div>
                <div class="d-flex justify-content-end">
                    <button class="btn btn-primary">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
        <div class="col-lg-3 col-md-2"></div>
    </div>
</div>