@page "/ajustes/sesiones_recordadas"
@model Isolaatti.Pages.SettingsPages.Sessions

@{
    Layout = "Shared/_LayoutWebApp";
    ViewData["Title"] = "Sesiones guardadas";

}
<div class="row m-0">
    <div class="col-lg-3 col-md-2"></div>
    <div class="col-lg-6 col-md-8">
        <h5 class="mt-3 text-center"><i class="fas fa-cog"></i> Ajustes</h5>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-page="/Settings">Ajustes</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Sesiones guardadas</li>
            </ol>
        </nav>
        <p>Estas son los dispositivos y navegadores donde has iniciado sesión.</p>
        <div class="list-group">
            @foreach (var sessionToken in Model.SessionTokens)
            {
                <div class="list-group-item">
                    @if (Model.CurrentToken.Id.Equals(sessionToken.Id))
                    {
                        <i class="fas fa-check"></i>
                    }
                    <h6>@sessionToken.IpAddress</h6>
                    <h6>@sessionToken.CreationDate</h6>
                    <small>@sessionToken.UserAgent</small>
                </div>
            }
        </div>
        <div class="list-group list-group-flush mt-2">
            <a class="list-group-item list-group-item-action" asp-page="/LogOutPage">Cerrar sesión</a>
        </div>
    </div>
    <div class="col-lg-3 col-md-2"></div>
</div>